<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:background="@drawable/gray_shape"
    android:padding="24dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_lesson"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/history"
        android:contentDescription="icon"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/days_left_clock"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_time_24"
        android:textColor="@color/primaryLightColor"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/image_lesson" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/days_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="days left 3"
        android:layout_marginLeft="4dp"
        android:textColor="@color/primaryLightColor"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/days_left_clock"
        app:layout_constraintBottom_toBottomOf="@id/image_lesson" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Calculate the simplest probabilities, as well as permutations and combinations."
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_lesson" />

</androidx.constraintlayout.widget.ConstraintLayout>

